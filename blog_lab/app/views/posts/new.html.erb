<h1>Add New Post</h1>

<%= form_for [@author, @post] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, autofocus: true %>

  <%= f.label :body %>
  <%= f.text_area :body %>

  <%= f.label :category %>
  <%= f.text_field :category %>

  <%= f.hidden_field :author_id, :value => @author.id %>

  <%= f.submit %>
<% end %>

<% if @post.errors.any?%>
  <% @post.errors.full_messages.each do |error|%>
    <p class="text-danger">
      <%= error %>
    </p>
    <% end%>
  <% end%>

<p>
  <%= link_to 'Back to Posts', author_posts_path(@author.id) %>
</p>