<h1>Showing Post</h1>

<% flash.each do |name, msg| -%>
  <%= content_tag :div, msg, class: name %>
<% end -%>

<h3><%= @post.title %></h3>
<p><%= @post.category %></p>
<p><%= @post.body %></p>

<p><%= link_to "Edit this post", edit_post_path(@post.id) %></p>

<p>
  <%= link_to 'Back to Posts', author_posts_path(@author.id) %>
</p>
