<h1>Add a New Author!</h1>

<%= form_for @author do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name, autofocus: true %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.label :age %>
  <%= f.text_field :age %>

  <%= f.submit %>
<% end %>

<% if @author.errors.any?%>
  <% @author.errors.full_messages.each do |error|%>
    <p class="text-danger">
      <%= error %>
    </p>
    <% end %>
  <% end%>

<p>
  <%= link_to 'Back to Authors', authors_path %>
</p>